using System;
using System.Collections.Generic;

namespace _25_sol
{
    internal class Program
    {
        static List<int> DivisionResult = new List<int>();
        static void Main(string[] args)
        {
            int maxnumbppl, startnumbappls;
            maxnumbppl = Convert.ToInt32(Console.ReadLine());
            startnumbappls = Convert.ToInt32(Console.ReadLine());
            cmmsm(maxnumbppl - 1, startnumbappls);
        }
        static void cmmsm(int numbppl, int apples)
        {
            var division = apples / numbppl;
            if (division == 0)
            {
                Console.WriteLine("Невозможно осуществить деление: " + (apples).ToString());
                DivisionResult.Add(apples);
                return;
            }
            Console.WriteLine($"Я съел столько яблок {(apples - division * numbppl).ToString()}" +
                $" и раздал по {division} ");
            DivisionResult.Add((apples - division * numbppl));
            for (int i = 0; i < numbppl; i++)
            {
                cmmsm(numbppl, division);
            }
        }
    }
}
